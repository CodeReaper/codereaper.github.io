root = true

[*]
end_of_line = lf
charset = utf-8

[.git/**]
end_of_line = unset
charset = unset
indent_size = unset
indent_style = unset
trim_trailing_whitespace = unset
insert_final_newline = unset

[*.yaml, *.yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true